
#!/bin/bash

/usr/sbin/ntpd -p /var/run/ntp/ntpd.pid -g -u ntp:ntp -c /etc/ntp.conf
/usr/sbin/smbd -D
/usr/sbin/nmbd -D

export PATH=$PATH:/sbin:/usr/sbin:/home/rtadmin/RTafni/bin:$HOME/RTafni/bin/AFNI:.

export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/lib64:/usr/lib64:/home/rtadmin/RTafni/lib

export DISPLAY=nickel.nimh.nih.gov:0.0

/home/rtadmin/RTafni/bin/checkAndKeepAlive.sh   /home/rtadmin/RTafni/bin/dcmListenerRT.py   -f /home/rtadmin/RTafni/tmp/dcmRxInfo.log   -h $HOSTNAME   -p 8111

logFile=log.starting.`date "+%Y.%m.%d.%H.%M.%S"`.txt

# Start RTafni program with all necessary arguments and enable logging
RTafni   -f /home/rtadmin/RTafni/tmp/dcmRxInfo.log   >>   /home/rtadmin/RTafni/var/log/RTafni.log/$logFile   2>&1   &

/bin/bash

